{
	"compilerOptions": {
		"strict": true,
		"sourceMap": false,
		"noImplicitReturns": true,
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"noUnusedLocals": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"lib": [
            "es2016"
        ]
	},
	"include": ["./src/**.ts", "./types/**/*.d.ts"],
	"exclude": ["node_modules", "./dist"]
}
